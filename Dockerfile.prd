# Etapa 1: Build
FROM node AS build
WORKDIR /app
COPY package*.json ./
RUN npm ci           # <--- Instala TODAS las dependencias, incluidas las de desarrollo
COPY . .
RUN npm run build

# Etapa 2: ProducciÃ³n
FROM node:alpine AS prod
WORKDIR /app
COPY --from=build /app/dist ./dist
COPY --from=build /app/node_modules ./node_modules
COPY --from=build /app/package.json ./package.json
ENV NODE_ENV=production
EXPOSE 3040
CMD ["node", "dist/index.js"]
